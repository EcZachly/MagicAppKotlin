<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="discover_heading">
        <item name="android:textSize">@dimen/discover_heading_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">@dimen/standard_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/standard_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/standard_horizontal_margin</item>
    </style>

    <style name="discover_group_lbl">
        <item name="android:textSize">@dimen/discover_lbl_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:layout_marginTop">@dimen/standard_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/standard_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/standard_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/standard_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/standard_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/standard_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/standard_horizontal_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="detail_heading">
        <item name="android:textSize">@dimen/discover_heading_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:layout_marginTop">@dimen/standard_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/standard_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/standard_horizontal_margin</item>
    </style>

    <style name="search_dlg_heading">
        <item name="android:textSize">@dimen/discover_heading_size</item>
        <item name="android:layout_marginBottom">@dimen/standard_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/standard_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/standard_horizontal_margin</item>
    </style>

    <style name="search_dlg_switch">
        <item name="android:textSize">@dimen/discover_heading_size</item>
        <item name="android:layout_marginBottom">@dimen/standard_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/standard_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/standard_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_horizontal_margin</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="button_style">
        <item name="android:layout_margin">@dimen/standard_horizontal_margin</item>
    </style>

</resources>
